{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@config/*": [
                "config/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "config/**/*",
        "mock/_createProductionServer.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        // "**/*.js"
    ]
}